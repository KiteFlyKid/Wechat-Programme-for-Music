@import "../../skins/dark.wxss";

.page {
  width: 100%;
  height: 2000rpx;
  background-color: #f1f1f1;
}

.profile {
  width: 100%;
  height: 150rpx;
  background-color: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.item {
  width: 80%;
  height: 80%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.profile image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  left: 150rpx;
}

.nickname {
  width: 200rpx;
  height: 120rpx;
  flex-direction: column;
  position: relative;
  left: 150rpx;
}

.levelFrame {
  background-color: #bbb;
  width: 120rpx;
  border-radius: 40%;
  display: flex;
  justify-content: center;
}

/* 第二部分 */

.number {
  display: flex;
  width: 100%;
  height: 100rpx;
  justify-content: space-around;
  align-items: center;
  background: white;
  border-top: 2rpx solid #e1e1e1;
}

.block {
  width: 25%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: column;
  border-right: 1rpx solid #b1b1b1;
}

.block:last-of-type {
  border-right-color: white;
}

.block image {
  width: 50rpx;
  height: 50rpx;
}

.block text:last-of-type {
  font-size: 30rpx;
}

/* 部分之间的空隙 */

.margin {
  width: 100%;
  height: 20rpx;
  opacity: 0;
}

.lists {
  width: 100%;
  height: 100rpx;
  background-color: whitesmoke;
}

/* 第三部分 */

.links {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  background-color: white;
}

.links image {
  width: 70rpx;
  height: 70rpx;
}

.links text {
  font-size: 40rpx;
}

/* 第四部分 */

.favorite {
  width: 100%;
  height: 150rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.favorite image {
  height: 90%;
  width: 90%;
  /* position: relative;
  left: 50rpx; */
}

.favorite view:first-of-type {
  height: 100rpx;
  width: 100rpx;
  position: relative;
  left: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: bisque;
}

.favorite view:last-of-type {
  display: flex;
  flex-direction: column;
  position: relative;
  left: 30%;
}

.favorite text:last-of-type {
  font-size: 25rpx;
  color: #7a7a7a;
}

.mode {
  display: flex;
  width: 100%;
  height: 100rpx;
  background-color: white;
  align-items: center;
}

.textTitle {
  position: absolute;
  left: 100rpx;
}

.mode switch {
  position: absolute;
  right: 50rpx;
}

.infoLogo {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 80rpx;
}
.below{
  border-top: 2rpx solid #f3f3f3;
}

#id{
  height: 40rpx; 
  width: 100rpx;
  position: absolute;
  right: 65rpx;
}

.smallLogo {
  height: 40rpx;
  width: 30rpx;
  position: absolute;
  right: 105rpx;
  opacity: 0.7;
}

.logOut{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
}

.quit{
  color: tomato;
}