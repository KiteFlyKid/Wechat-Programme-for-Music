/*用户1*/
.user1{
  width: 100%;
  height: 700rpx;
  background-color:white;
  position: relative;
  border-radius: 80rpx;
}

/*头像以及昵称等*/
.user1 navigator{
  width: 150rpx;
  height: 150rpx; 
}

.user1 navigator image{
width: 100rpx;
height: 100rpx;
margin-left: 50rpx;
margin-top: 25rpx;
border-radius: 50%;
}

.user1>view:nth-child(2){
  width: 150rpx;
  height: 150rpx; 
  position: absolute;
  left: 160rpx;
  top: 20rpx;
}

.user1>view:nth-child(2) text{
  top:50rpx;
  font-size:12px;
}

/*控制*/

.user1 .control{
  width: 200rpx;
  height: 150rpx;
  top:0;
  right: 0;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.user1 .control image{
  width: 60rpx;
  height: 60rpx;
}

/*时间*/
.user1 .time{
  width: 100rpx;
  height: 50rpx;
  top: 110rpx;
  left:160rpx;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.user1 .time text{
  font-size:9px;

}


/*标题*/
.user1 .tittle {
  width: 100%;
  height: 60rpx;
  position: absolute;
  text-align: center;
  font-style: oblique;

}

/*视频的那个播放页*/
.user1 .mv{
  width: 100%;
  height: 500rpx;
  position: absolute;
  top: 220rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color:rgb(7, 7, 7);
  opacity: 0.9;
}

.user1 .mv image{
  width: 95%;
  height: 475rpx;
  background-color: white;
  border-radius: 40rpx;
}










