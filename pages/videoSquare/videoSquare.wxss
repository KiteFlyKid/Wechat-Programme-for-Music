movable-area{
  width: 100%;
  height: 100rpx;
}
.top {
    width: 150%;
 
    display: flex;
    justify-content:space-between;
    align-items: center;
    flex-direction: row;
    align-content: center;
    height: 80rpx;
    background-color: #fff;
    border-bottom: solid 1px #efefef;
}

.top-item {
    line-height: 80rpx;
    
    flex: 1;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #666;
    padding: 0 5rpx;
}

.top-item text {
    display: inline-block;
    line-height: 80rpx;
    flex: 1;
    text-align: left;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    /* color: rgb(24, 21, 21); */
    padding: 0 20rpx;
}

.on {
    border-bottom: solid 2px #db363e;
    color:  #db363e;
}


.box {
    display: flex;
    flex-direction: column;
    width: 690rpx;
    margin: auto;
}

.video {
    display: flex;
    flex-direction: column;
}

.video-item {
    padding: 40rpx 0;
    border-bottom: solid 8px #efefef;
}
.wrapper{
	    width: 690rpx;
    height: 400rpx;
	position: relative;
}
.video-video {
    width: 690rpx;
    height: 400rpx;
}
.videocover {
    width: 690rpx;
    height: 400rpx;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 99;
}
.videoPlay{
	position: absolute;
    width: 60rpx;
    height: 60rpx;
    top: 50%;
    left: 50%;
    margin: -30rpx 0 0 -30rpx;
	z-index: 100;
}

.video-name {
    margin-top: 10rpx;
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    color: #333;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.video-desc {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #666;
    margin-top: 10rpx;
    /* display: -webkit-box; */
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.video-bottom {
    display: flex;
    justify-content: flex-end;
}

.video-btn {
  position: relative;
    margin-top: 20rpx;
    width: 100%;
    height: 50rpx;
    border-top: solid 1px #d2d2d2;
    display: flex;
    flex-direction: row;
    /* justify-content: center; */
    align-items: center;
}

.video-btn image{
position: absolute;
 width: 40rpx;
 height: 40rpx;
   top: 26rpx;
}
.video-btn .goodCount{
  position: absolute;
  top: 1rpx;
right: 170rpx;
}
.video-btn .goodCount text{
  font-size: 18rpx;
}
.video-btn .related{
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.video-btn .share{
   right: 30rpx;
}
.video-btn .comment{
  top: 10rpx;
   right: 110rpx;
   width: 70rpx;
   height: 70rpx
}
.video-btn .good{
  top: 20rpx;
     width: 50rpx;
   height: 50rpx;
   right: 210rpx;
}
.video-btn .words{
position: absolute;
left:100rpx;
top: 25rpx;
font-size: 30rpx;
color: black;
} 
.video-btn text {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #999;
}

