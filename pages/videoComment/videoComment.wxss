.hotComments {
  width: 100%;
}

.hotComments view {
  padding-top: 15rpx;
}

.hotComments view.infoC {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding-bottom: 0rpx;
}

.hotComments view.infoC image:nth-of-type(1) {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  left: 0rpx;
  top: 10rpx;
}

.hotComments view.infoC text:nth-of-type(1) {
  position: absolute;
  top: 28rpx;
  left: 100rpx;
  font-size: 27rpx;
  font-weight: bold;
}

.hotComments view.infoC text:nth-of-type(2) {
  position: absolute;
  right: 60rpx;
  top: 28rpx;
  font-size: 27rpx;
}

.hotComments image:nth-of-type(2) {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}

.hotComments view.content {
  width: 87%;
  height: 100%;
  padding-left: 80rpx;
  padding-bottom: 0rpx;
  font-size: 30rpx;
}

.hotComments view.content image {
  width: 100%;
  height: 5rpx;
  padding-top: 0rpx;
}

