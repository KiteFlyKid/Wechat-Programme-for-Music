/* pages/play/play.wxss */
page{
  background-color: #bcbab8
}
/* 背景图片 */
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
#playing-zz{text-align: center;position: absolute;z-index:20;width: 100%;top:0;}
#playing-zz image{width: 222rpx;height:366rpx;margin:-60rpx 0 0 60px; transform-origin:60rpx 60rpx; transform: rotate(-20deg);
transition: all linear .5s }
.playing #playing-zz image{transform: rotate(-0deg) }

/*音乐信息的设定*/
.music_info{
  width: 100%;
  height: 150rpx;
  color: white;
  margin-top:40rpx;
  position: absolute;
  top: 680rpx;
}

.music_info view{
  height: 60rpx;
  text-align: center;/*view中的文本居中*/
}

.music_info_top view:last-child text{
  font-size:30rpx;
}
.music_info_top{
  width: 100%;
  height: 150rpx;
  color: white;
  margin-top:40rpx;
  position: absolute;
  top: 0rpx;
}

.music_info_top view{
  height: 60rpx;
  text-align: center;/*view中的文本居中*/
}

.music_info_top view:last-child text{
  font-size:30rpx;
}

/*圆形转盘*/
.music_poster{
  width: 100%;
  height:400rpx;
  position: absolute;
  top: 175rpx;
  left: 150rpx;
}

.music_poster view{
  width: 450rpx;
  height: 450rpx;
  border-radius: 50%;
  background-color: #cacaca;
  display: flex;
  justify-content: center;
  align-items: center;
}

.music_poster view image{
  width: 450rpx;
  height: 450rpx;
  border-radius: 50%;
}
/*进度条*/
.music_progress{
  width: 100%;
  height: 50rpx;
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50rpx;
  top: 850rpx;
}

.music_progress progress{
  width: 70%;
}

/*音乐控制*/
.music_controll{
  width: 90%;
  height: 100rpx;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  left: 50rpx;
  top: 1000rpx;
}

.music_controll image{
  width: 80rpx;
  height: 80rpx;
}

.music_controll image:nth-child(3){
  width: 120rpx;
  height: 120rpx;
}
/*收藏栏，下载*/
.controller{
  width: 90%;
  height: 180rpx;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  position: absolute;
  left: 50rpx;
  top: 800rpx;
  
}



.controller image:nth-child(1){
  width: 80rpx;
  height: 80rpx;
}
.controller image:nth-child(2){
  width: 100rpx;
  height: 100rpx;
}
.controller image:nth-child(3){
  width: 100rpx;
  height: 100rpx;
}
.controller image:nth-child(4){
  width: 50rpx;
  height: 50rpx;
}
.controller image:nth-child(5){
  width: 50rpx;
  height: 50rpx;
}
/*歌词区域*/
movable-area{
  width: 100%; 
  height: 700rpx;

  /* top: 100rpx; */
}

movable-view{
  position: relative;
  width:100%;
  height:6000rpx;
}

.music_lrc{
  overflow: hidden;
  position: relative;
  top: 200rpx;
}

.mlrc div{
  font-family:Geneva, sans-serif ;
  width: 100%;
  font: 36px/18px;
  display: flex;
  justify-content: center;
  text-align: center; 

}
.lrcDetail{
  display: flex;
  justify-content: center;
  align-content: center;
}
